doctype basic
html
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="chrome=1")
    title
      if post
        | #{post.heading}
      else
        | #{site.site_title} by #{site.author}
    link(rel="stylesheet", href="#{site.base_url}theme/stylesheets/gfm_markdown.css")
    link(rel="stylesheet", href="#{site.base_url}theme/stylesheets/style.css")
    // if lt IE 9
      script(src="//html5shiv.googlecode.com/svn/trunk/html5.js").
    meta(name="viewport", 
      content="width=device-width, initial-scale=1, user-scalable=no")

  body
    header#header
      div.aux
        h1: a(href="/") #{site.site_title}
    nav#nav
      ul
        li: a(href="/") Home
        each category in site.categories
          li: a(href="/#{category}") #{category}
        li: a(href="/feed.xml") Feed
        li: a(href="#{site.about_url}") About
    block content
    footer
      .aux
        each plugin in site.plugins
          !{plugin}
    // if !IE
      script.
        fixScale(document);
