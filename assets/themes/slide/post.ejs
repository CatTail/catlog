  <article class="flexbox vcenter">
    <span><img src="<%- base_url %>themes/<%- theme %>/images/google_developers_logo.png"></span>
  </article>
</slide>
 -->
<slide class="title-slide segue nobackground">
  <aside class="gdbar"><img src="<%- base_url %>themes/<%- theme %>/images/geektalk_logo_128.png"></aside>
  <!-- The content of this hgroup is replaced programmatically through the slide_config.json. -->
  <hgroup class="auto-fadein">
    <h1 data-config-title><!-- populated from slide_config.json --></h1>
    <h2 data-config-subtitle><!-- populated from slide_config.json --></h2>
    <!--p data-config-presenter><!-- populated from slide_config.json --></p-->
  </hgroup>
</slide>

<% slides.forEach(function(slide) { %>
<slide <% if (slide.class) { %>class="<%- slide.class %>"<% } %> <% if (slide.image) { %>style="background-image: url(<%- slide.image %>)"<% } %>>
  <% if (slide.class && slide.class.indexOf('segue') !== -1) { %>
    <aside class="gdbar"><img src="<%- base_url %>themes/<%- theme %>/images/geektalk_logo_128.png"></aside>
    <hgroup class="auto-fadein">
      <h2><%- slide.title %></h2>
      <h3><%- slide.subtitle %></h3>
    </hgroup>
  <% } else { %>
    <hgroup>
      <h2><%- slide.title %></h2>
      <h3><%- slide.subtitle %></h3>
    </hgroup>
    <article <% if (slide.content_class) { %>class="<%- slide.content_class %>"<% } %>>
    <%- slide.content %>
    </article>
  <% } %>
</slide>
<% }); %>

<slide class="thank-you-slide segue nobackground">
  <aside class="gdbar right"><img src="<%- base_url %>themes/<%- theme %>/images/geektalk_logo_128.png"></aside>
  <article class="flexbox vleft auto-fadein">
    <h2>&lt;Thank You!&gt;</h2>
  </article>
  <p class="auto-fadein" data-config-contact>
    <!-- populated from slide_config.json -->
  </p>
</slide>

